<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='cop'>
    <!-- GWT -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.resources.Resources"/>
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="com.google.gwt.xml.XML"/>
    <!-- Gin -->
    <inherits name="com.google.gwt.inject.Inject"/>
    <!-- GWT Event Bus Binding -->
    <inherits name='com.google.web.bindery.event.EventBinder'/>
    <!-- RestyGWT -->
    <inherits name='com.google.web.bindery.requestfactory.RequestFactory'/>
    <inherits name="org.fusesource.restygwt.RestyGWT"/>
    <!-- LOGGING -->
    <inherits name="com.google.gwt.logging.Logging"/>
    <!-- MVP -->
    <inherits name='com.google.gwt.activity.Activity'/>
    <inherits name='com.google.gwt.place.Place'/>
    <!-- GXT -->
    <inherits name="com.sencha.gxt.ui.GXT"/>
    <inherits name='com.sencha.gxt.chart.Chart'/>

    <inherits name="com.sencha.gxt.theme.blue.Blue"/>
    <!-- <inherits name="com.sencha.gxt.theme.gray.Gray" /> -->
    <!-- <inherits name="com.sencha.gxt.theme.neptune.Theme" /> -->
    <!-- <inherits name="com.sencha.gxt.theme.triton.Theme" /> -->
    <!-- OL -->
    <inherits name='ol.GwtOL3'/>
    <inherits name="org.apache.commons.GWTCommonsLang3"/>
    <inherits name="gwt.material.design.Resources"/>
    <inherits name="gwt.material.design.Resources"/>
    <inherits name="org.dominokit.domino.ui.DominoUI"/>

    <entry-point class='pl.edu.wat.wcy.cop.app.client.Cop'/>


    <!-- CONFIG -->
    <source path='client'/>
    <source path='shared'/>
    <stylesheet src="reset.css"/>
    <!-- LOGGING -->
    <set-property name="gwt.logging.logLevel" value="FINEST"/>
    <set-property name="gwt.logging.enabled" value="TRUE"/>
    <!-- <set-property name="gwt.logging.simpleRemoteHandler" -->
    <!-- value="ENABLED" /> -->

    <set-configuration-property name='xsiframe.failIfScriptTag'
                                value='FALSE'/>


    <extend-property name="locale" values="en"/>
    <extend-property name="locale" values="pl_PL"/>
    <set-property-fallback name="locale" value="pl_PL"/>

    <set-property name="user.agent" value="safari"/>

    <!-- SuperDev Mode -->
    <set-configuration-property name="devModeRedirectEnabled"
                                value="true"/>
    <set-property name="compiler.useSourceMaps" value="false"/>
    <set-property name="gwt.draftCompile" value="true"/>
    <set-property name="disableClassMetaData" value="true"/>
    <set-property name="disableCastChecking" value="true"/>

    <set-property name="compiler.emulatedStack" value="true"/>
    <set-configuration-property name="compiler.emulatedStack.recordFileNames"
                                value="true"/>

    <generate-with
            class="pl.edu.wat.wcy.cop.app.client.jaxb.JAXBParserGenerator">
        <when-type-assignable
                class="pl.edu.wat.wcy.cop.app.client.jaxb.JAXBParserFactory"/>
    </generate-with>

    <collapse-all-properties/>
</module>
